# Guardfile built by Meez ( http://github.com/paulczar/meez )
# for testing your chef cookbooks.

guard :rubocop do
  watch(/.+\.rb$/)
  watch(/(?:.+\/)?\.rubocop\.yml$/) { |m| File.dirname(m[0]) }
end

guard :foodcritic, cookbook_paths: '.', cli: ['--epic-fail', 'any'] do
  watch(/(?:.+\/)?\attributes\.+\.rb$/)
  watch(/(?:.+\/)?\providers\.+\.rb$/)
  watch(/(?:.+\/)?\recipes\.+\.rb$/)
  watch(/(?:.+\/)?\resources\.+\.rb$/)
  watch('metadata.rb')
end
